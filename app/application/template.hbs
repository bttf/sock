<div class="header-bar">
  <div class="container">
    <h1>
      sock
      <small>never lose your shit again</small>
    </h1>

    {{#unless session.isAuthenticated}}
      <div class="app-login">
        {{input class="form-control" type="text" placeholder="E-mail" value=loginEmail}}
        {{input class="form-control" type="password" placeholder="Password" value=loginPassword}}
        <button type="button" class="btn btn-default" {{action 'login' loginEmail loginPassword}}>Login</button>
        <div>
          <a href="#">Forgot your password?</a>
        </div>
      </div>
    {{else}}
      <strong>{{session.secure.email}}</strong>
      <a href="#" {{action 'logout'}}>Logout</a>
    {{/unless}}

  </div>
</div>

<div class="container">
  {{outlet}}
</div>
